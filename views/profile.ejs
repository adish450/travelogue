<html>
    <head>
    <title>Profile</title>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.2.0/css/all.css" integrity="sha384-hWVjflwFxL6sNzntih27bfxkr27PmbbK/iSvJ+a4+0owXq79v+lsFkW54bOGbiDQ" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.3.1.min.js"
    integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8=" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="/stylesheets/profile.css">
    <link rel="stylesheet" href="/stylesheets/bootstrap.css" type="text/css">
    <!-- Meta, title, CSS, favicons, etc. -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    </head>

    <body>
    <!-- navbar section -->
    <section class="navabar-side">
            <header>
                    <ul class="nav-top">
                        <li><a href="/logout">Logout</a></li>
                    </ul>
                </header>
        <navabar>
        <ul class="nav-side">
            <div>
                <i class="fas font-awesome"></i>
            </div>
            <div>
                <li><i class="fas fa-home"></i><a href="#" id="home">Home</a></li>
                <li><i class="fas fa-user"></i><a href="#" id="my-account">My Account</a></li>
                <li><i class="fab fa-reddit my-blogs"></i><a href="#" id="my-blogs">My Blogs</a></li>
                <li><i class="fas fa-plus-circle"></i><a href="#" id="add-new-blog">Add New Blog</a></li>
                <li><i class="fas fa-user-edit"></i><a href="#" id="manage-blogs">Manage Blogs</a></li>
            </div>
        </ul>
        </navabar>
    </section>
    <!-- content section -->
    <section>
        <div class="main-content">
            <div id="title" class="hide">
                <h1>My Blogs</h1>
            </div>
            <div class="hide" id="welcome">
                <h1>Welcome <%= name%>!</h1>
            </div>
            <div class="hide" id="status">
                <h2>Account Type : General User</h2>
                <h2>Account Status : Active</h2>
            </div>
            <form action="/users/<%=name%>" method="POST" class="hide">
                <div class="new-blog">
                <textarea id="title"></textarea>
                <textarea id="content"></textarea>
                <input type="submit">
            </div>
            </form>
            <% for(var i=0;i<User.blog_title.length;i++){ %>
                <% if(User.blog_title[i] != null) { %>
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 blogs hide">
                        <div class="col-md-5">
                          <img src="/thumbnail.jpeg">
                        </div>
                        <div class="col-md-7 content">
                         <h1>Title of the blog :<span><%= User.blog_title[i] %></span></h1>
                        </div>
                    </div>
                <% } %>
            <% } %>
        </div>
        <% if(User.blog_title.length == 0) { %>
        <h1>You don't have any blogs !</h1>
        <% } %>
    </section>
    </body>
    <script src="/javascript/profile.js"></script>
</html>